@model List<CardModel>
@{
    var i = 0;
    var colors = new[] { "bg-primary", "bg-warning", "bg-danger", "bg-success" };
}

<div class="row g-4">
    @foreach (var card in Model)
    {
        <div class="col-12 col-sm-6 col-xl-4 col-xxl-3">
            <div class="card text-white @colors[i]">
                <div class="card-body card-count">
                    <a asp-action="Index" asp-controller="Backlog" asp-route-filter="@card.FilterMode">
                        <div class="fs-4 fw-semibold">@card.Count</div>
                        <div>@card.Name</div>
                    </a>
                </div>
            </div>
        </div>
        i++;
    }
</div>